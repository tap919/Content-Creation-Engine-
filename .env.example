# Agentic Content Factory
# Environment Configuration Template
# Copy this to .env and fill in your values

# OpenAI API Key (required for LLM brief generation)
OPENAI_API_KEY=your_openai_api_key_here

# Twitter/X API Credentials (for trend scraping)
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret
TWITTER_BEARER_TOKEN=your_twitter_bearer_token

# Instagram API (for deployment)
INSTAGRAM_ACCESS_TOKEN=your_instagram_token

# TikTok API (for deployment)
TIKTOK_CLIENT_KEY=your_tiktok_client_key
TIKTOK_CLIENT_SECRET=your_tiktok_client_secret

# YouTube API (for deployment)
YOUTUBE_API_KEY=your_youtube_api_key

# Redis Configuration (for caching and task queue)
REDIS_URL=redis://localhost:6379/0

# Database Configuration
DATABASE_URL=sqlite:///./content_factory.db

# Logging
LOG_LEVEL=INFO

# Environment
ENVIRONMENT=development
